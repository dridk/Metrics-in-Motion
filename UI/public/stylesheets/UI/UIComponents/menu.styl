@import 'nib'
@import '../../shared/variables'
//- UI Menu
.ui-menu
    list-style none
    padding 2px
    margin 0
    display block
    outline none
    .ui-menu
        margin-top -3px
        position absolute
    .ui-menu-item
        margin 0
        padding 0
        width 100%
        listimage url(data:image/gif)
        a
            text-decoration none
            display block
            padding 2px .4em
            line-height 1.5
            min-height 0
            font-weight normal
    .ui-menu-divider
        margin 5px -2px 5px -2px
        height 0
        font-size 0
        line-height 0
        border-width 1px 0 0 0
    .ui-state-disabled
        font-weight normal
        margin .4em 0 .2em
        line-height 1.5
        a
            cursor default
    .ui-icon
        position absolute
        top .2em
        left .2em
    .ui-menu-icon
        position static
        float right

.ui-menu .ui-menu-item a.ui-state-focus,
.ui-menu .ui-menu-item a.ui-state-active
    font-weight normal
    margin -1px

.ui-menu-icons
    position relative
    .ui-menu-item
        a
            position relative
            padding-left 2em