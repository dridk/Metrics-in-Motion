@import 'nib'
@import '../../shared/variables'
#content-views-list
    display block
    :first-child
        margin-top: 0!important
    .content-views-list-item
        position relative
        cursor pointer
        margin 6px 0
        color $color-white
        background $color-gray-darker
        min-height 32px
        padding 10px 5px 10px 15px
        border-left 4px solid $color-gray-dark
        *
            cursor pointer
        &.selected
            background $color-selection-light-accent
            &:after
                position absolute
                content ''
                width 0px
                height 0px
                border-style solid
                border-width 9px 10px 9px 0
                border-color transparent #eee transparent transparent
                right 0
                top 50%
                margin-top -8px
        &.update
            border-left-color $color-informer-update
        
        .ui-label
            display block